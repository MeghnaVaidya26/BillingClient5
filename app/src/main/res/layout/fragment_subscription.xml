<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp">


            <HorizontalScrollView
                android:id="@+id/hsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >

                <LinearLayout
                    android:id="@+id/ll_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_135sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginStart="@dimen/_8sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="-8dp"
                            android:visibility="invisible"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent"
                                android:paddingStart="6dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="4dp"
                                android:text="3 days free"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_7ssp" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_weekly"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cv_days"
                            android:background="@drawable/bg_gray_round_corner"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/sfprodisplaybold"
                                android:includeFontPadding="false"
                                android:text="1"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_22ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfprodisplayregular"
                                android:includeFontPadding="false"
                                android:text="Week"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:id="@+id/tv_week_week"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/sfprodisplaythin"
                                android:text="$23.99/week"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:background="#616179" />

                            <TextView
                                android:id="@+id/tv_week"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfprodisplaybold"
                                android:text="$23.99"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text="per week"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginStart="@dimen/_8sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="-8dp"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent"
                                android:paddingStart="6dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="4dp"
                                android:text="3 days free"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_7ssp" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_month"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cv_month"
                            android:background="@drawable/bg_green_round_corner"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/sfprodisplaybold"
                                android:includeFontPadding="false"
                                android:text="1"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_22ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfprodisplayregular"
                                android:includeFontPadding="false"
                                android:text="Month"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:id="@+id/tv_month_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/sfprodisplaythin"
                                android:text="$23.99/week"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:background="#616179" />

                            <TextView
                                android:id="@+id/tv_month_month"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfprodisplaybold"
                                android:text="$23.99"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text="per month"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginStart="@dimen/_8sdp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_days_months"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="-8dp"
                            android:visibility="invisible"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent"
                                android:paddingStart="6dp"
                                android:paddingTop="4dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="4dp"
                                android:text="3 days free"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_7ssp" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_yearly"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cv_days_months"
                            android:background="@drawable/bg_gray_round_corner"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/sfprodisplaybold"
                                android:includeFontPadding="false"
                                android:text="12"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_22ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfprodisplayregular"
                                android:includeFontPadding="false"
                                android:text="Months"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:id="@+id/tv_year_per_week"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:fontFamily="@font/sfprodisplaythin"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                tools:text="$23.99/week" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:background="#616179" />

                            <TextView
                                android:id="@+id/tv_year_per_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/sfprodisplaybold"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp"
                                tools:text="$23.99" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text="per month"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/bt_continue_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hsView"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_button_shape"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/continue_string"
                android:textColor="@color/colorWhite"

                android:textSize="@dimen/_14ssp">

                <TextView
                    android:id="@+id/tv_continue"
                    style="@style/bButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="@string/try_and_subscribe" />


            </RelativeLayout>
                <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_continue_sub"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRestore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:text="@string/restore"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_terms_of_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
        </RelativeLayout>

</RelativeLayout>